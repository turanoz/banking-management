@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}
@model AccountCreateDto

<h1 class="my-4">Create Account</h1>
<form asp-area="Customer" asp-controller="Account" asp-action="Create">
    <div class="mb-3">
        <label for="Name" class="form-label">Account Name:</label>
        <input type="text" class="form-control" asp-for="Name" required>
    </div>
    <div class="mb-3">
        <label for="Type" class="form-label">Account Type:</label>
        <select class="form-select" asp-for="Type" required>
            <option value="0">Checking</option>
            <option value="1">Savings</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="Balance" class="form-label">Balance:</label>
        <input type="number" class="form-control" asp-for="Balance" step="0.01" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>