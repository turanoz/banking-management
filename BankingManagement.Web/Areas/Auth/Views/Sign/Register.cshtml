@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}
@model RegisterDto

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Create Account</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-area="Auth" asp-controller="Sign" asp-action="Register">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="FirstName" type="text" placeholder="Enter your first name"/>
                                    <label for="FirstName">First name</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="LastName" type="text" placeholder="Enter your last name"/>
                                    <label for="LastName">Last name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" type="email" placeholder="name@example.com"/>
                            <label for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="Password" type="password" placeholder="Create a password"/>
                                    <label for="Password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm password"/>
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">Create Account</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-area="Auth" asp-controller="Sign" asp-action="Login">Have an account? Go to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>