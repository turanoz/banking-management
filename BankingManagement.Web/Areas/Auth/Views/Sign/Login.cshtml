@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}
@model LoginDto

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-area="Auth" asp-controller="Sign" asp-action="Login">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Email" type="email" placeholder="name@example.com"/>
                            <label for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Password" id="inputPassword" type="password" placeholder="Password"/>
                            <label for="inputPassword">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" type="checkbox"/>
                            <label class="form-check-label" for="RememberMe">Remember Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-action="Register">Need an account? Sign up!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>