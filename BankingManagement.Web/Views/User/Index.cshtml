@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BankingManagement.Core.DTOs.Response
@model CustomResponseDto<IEnumerable<UserDto>>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<a class="btn btn-primary" asp-controller="User" asp-action="Create">Yeni</a>

@switch (Model.Status)
{
    case ResponseStatus.Error:
        <div class="alert alert-danger" role="alert">
            @Model.Message
        </div>
        break;
    case ResponseStatus.Info:
        <div class="alert alert-info" role="alert">
            @Model.Message
        </div>
        break;
    default:
        <div></div>
        break;
}

<table class="table">
    <tr>
        <th>Avatar</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
        <!-- Add more columns as needed -->
        <th>Actions</th>
    </tr>
    @foreach (var user in Model.Data)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
            </td>
        </tr>
    }
</table>