@model IEnumerable<BankingManagement.Core.DTOs.User.UserDto>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<a class="btn btn-primary" asp-controller="User" asp-action="Create">Yeni</a>

<table class="table">
    <tr>
        <th>Avatar</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
        <!-- Add more columns as needed -->
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>
                <img src="@user.Avatar" alt="User avatar" width="50" height="50"/>
            </td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
            </td>
        </tr>
    }
</table>